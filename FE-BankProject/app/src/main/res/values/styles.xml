<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxStrokeColor">#CCCCCC</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textColorHint">#999999</item>
        <item name="hintTextAppearance">@style/CustomHintText</item>
    </style>

    <style name="CustomHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#999999</item>
    </style>
</resources>