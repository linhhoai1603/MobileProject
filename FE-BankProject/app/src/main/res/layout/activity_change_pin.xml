<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="24dp">
    <!--  Tiêu đề  -->
    <TextView android:id="@+id/tvTitle" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Đổi Mã PIN Thẻ" android:textSize="22sp" android:textStyle="bold" android:textColor="#000000" android:gravity="center" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Số thẻ  -->
    <EditText android:id="@+id/etCardNumber" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="48dp" android:padding="12dp" android:hint="Nhập số thẻ" android:inputType="number" android:maxLength="16" android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@id/tvTitle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Mã PIN cũ  -->
    <EditText android:id="@+id/etOldPin" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="48dp" android:padding="12dp" android:hint="Nhập mã PIN cũ" android:inputType="numberPassword" android:maxLength="6" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@id/etCardNumber" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Mã PIN mới  -->
    <EditText android:id="@+id/etNewPin" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="48dp" android:padding="12dp" android:hint="Nhập mã PIN mới" android:inputType="numberPassword" android:maxLength="6" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@id/etOldPin" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Nút xác nhận đổi PIN  -->
    <Button android:id="@+id/btnChangePin" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Đổi Mã PIN" android:backgroundTint="#00A94F" android:textColor="#FFFFFF" android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@id/etNewPin" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Nút quên mã PIN  -->
    <Button android:id="@+id/btnForgotPin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quên mã PIN?" android:textColor="#FFFFFF" android:textStyle="bold" android:layout_marginTop="16dp" android:clickable="true" android:focusable="true" android:minHeight="48dp" android:paddingTop="12dp" android:paddingBottom="12dp" app:layout_constraintTop_toBottomOf="@id/btnChangePin" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>