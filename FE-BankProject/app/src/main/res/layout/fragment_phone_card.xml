<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn nhà mạng"
            android:textSize="14sp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/providerSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập số điện thoại"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phoneNumberInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"
                android:hint="Nhập số điện thoại"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"/>

            <ImageButton
                android:id="@+id/contactsButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_contacts"
                android:background="@drawable/bg_rounded_white"
                android:padding="12dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn mệnh giá"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/cardAmountGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/card10k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card20k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card30k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card50k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="50.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card100k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card200k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="200.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card300k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="300.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>

            <RadioButton
                android:id="@+id/card500k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500.000đ"
                android:padding="12dp"
                android:background="@drawable/bg_rounded_white"
                android:layout_margin="4dp"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/topUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nạp thẻ"
            android:layout_marginTop="24dp"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView> 