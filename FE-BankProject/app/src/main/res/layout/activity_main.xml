<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    tools:context=".MainActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Container for the menu fragment -->
    <FrameLayout
        android:id="@+id/menu_fragment_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:background="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.66"/>

    <!-- Overlay to handle clicks outside menu -->
    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/menu_fragment_container"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#673AB7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Bank"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content area (Scrollable) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@drawable/default_background">

                <!-- Menu Icon (Placeholder) -->
                <TextView
                    android:id="@+id/ivMenuIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf0c9;"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:fontFamily="@font/fontawesome"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Perfect Text -->
                <TextView
                    android:id="@+id/tvPerfect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfect"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivMenuIcon"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/ivRedDot"/>

                <!-- Red Dot Icon (Placeholder) -->
                <TextView
                    android:id="@+id/ivRedDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&#xf111;"
                    android:textSize="12sp"
                    android:textColor="#FF0000"
                    android:gravity="center"
                    android:fontFamily="@font/fontawesome"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Avatar Image -->
                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPerfect"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- User Name -->
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHAN VAN HOANG"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="@+id/ivAvatar"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
                    app:layout_constraintStart_toEndOf="@+id/ivAvatar"/>

                <!-- Activation Text -->
                <TextView
                    android:id="@+id/tvActivation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KÍCH HOẠT ĐỂ ĐƯỢC BẢO VỆ"
                    android:textSize="14sp"
                    android:textColor="#FFEB3B"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- View Account Button -->
                <Button
                    android:id="@+id/btnViewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XEM TÀI KHOẢN"
                    android:backgroundTint="#673AB7"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvActivation"
                    app:layout_constraintStart_toStartOf="parent"/>

                <!-- Down Arrow Icon -->
                <ImageView
                    android:id="@+id/ivDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/arrow_down_float"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnViewAccount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Main Features Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tính năng chính"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Feature Buttons -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="2"
                    android:layout_marginTop="16dp"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <!-- Chuyển tiền -->
                    <LinearLayout
                        android:id="@+id/layout_transfer_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="&#xf1d8;"
                            android:textSize="24sp"
                            android:textColor="#673AB7"
                            android:gravity="center"
                            android:fontFamily="@font/fontawesome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chuyển tiền"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Vay tiền -->
                    <LinearLayout
                        android:id="@+id/layout_loan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="&#xf1e0;"
                            android:textSize="24sp"
                            android:textColor="#673AB7"
                            android:gravity="center"
                            android:fontFamily="@font/fontawesome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vay tiền"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Quét QR -->
                    <LinearLayout
                        android:id="@+id/layout_scan_qr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="&#xf030;"
                            android:textSize="24sp"
                            android:textColor="#673AB7"
                            android:gravity="center"
                            android:fontFamily="@font/fontawesome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quét QR"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Thanh toán -->
                    <LinearLayout
                        android:id="@+id/layout_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="&#xf093;"
                            android:textSize="24sp"
                            android:textColor="#673AB7"
                            android:gravity="center"
                            android:fontFamily="@font/fontawesome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thanh toán"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Nạp điện thoại -->
                    <LinearLayout
                        android:id="@+id/layout_top_up"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="&#xf095;"
                            android:textSize="24sp"
                            android:textColor="#673AB7"
                            android:gravity="center"
                            android:fontFamily="@font/fontawesome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nạp điện thoại"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Dịch vụ thẻ -->
                    <LinearLayout
                        android:id="@+id/layout_card_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="&#xf06e;"
                            android:textSize="24sp"
                            android:textColor="#673AB7"
                            android:gravity="center"
                            android:fontFamily="@font/fontawesome"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dịch vụ thẻ"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <!-- Linked Applications Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ứng dụng liên kết"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <!-- Linked Apps Horizontal Scroll -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Placeholder for linked app 1 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/sym_def_app_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App 1"/>
                        </LinearLayout>

                        <!-- Placeholder for linked app 2 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/sym_def_app_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App 2"/>
                        </LinearLayout>

                        <!-- Placeholder for linked app 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/sym_def_app_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App 3"/>
                        </LinearLayout>

                        <!-- Placeholder for linked app 4 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:padding="8dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@android:drawable/sym_def_app_icon"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App 4"/>
                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Promotions Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khuyến mãi của bạn"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XEM THÊM"
                        android:textSize="14sp"
                        android:textColor="#00A0B0"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <!-- Promotions Horizontal Scroll -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Placeholder for promotion 1 -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:src="@android:drawable/gallery_thumb" />

                        <!-- Placeholder for promotion 2 -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="8dp"
                            android:src="@android:drawable/gallery_thumb" />

                        <!-- Placeholder for promotion 3 -->
                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="100dp"
                            android:src="@android:drawable/gallery_thumb" />

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>