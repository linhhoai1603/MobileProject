<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green_500"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabTextColor="@color/black"
        app:tabSelectedTextColor="@color/green_500"
        app:tabIndicatorColor="@color/green_500">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả trước" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thẻ điện thoại" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả sau" />
    </com.google.android.material.tabs.TabLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_background"
                android:padding="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/fa_mobile"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                    android:fontFamily="@font/fontawesome" />

                <EditText
                    android:id="@+id/phoneNumberInput"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:background="@null"
                    android:hint="Nhập số điện thoại"
                    android:inputType="phone"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/contactsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="@string/fa_address_book"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:fontFamily="@font/fontawesome" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:layout_marginTop="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount10k"
                    style="@style/AmountButton"
                    android:text="10.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount20k"
                    style="@style/AmountButton"
                    android:text="20.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount30k"
                    style="@style/AmountButton"
                    android:text="30.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount50k"
                    style="@style/AmountButton"
                    android:text="50.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount100k"
                    style="@style/AmountButton"
                    android:text="100.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount200k"
                    style="@style/AmountButton"
                    android:text="200.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount300k"
                    style="@style/AmountButton"
                    android:text="300.000đ" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/amount500k"
                    style="@style/AmountButton"
                    android:text="500.000đ" />
            </GridLayout>

            <LinearLayout
                android:id="@+id/autoTopupLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="@drawable/rounded_border_background">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/fa_clock_rotate_left"
                    android:textColor="@color/green_500"
                    android:textSize="18sp"
                    android:fontFamily="@font/fontawesome" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Kích hoạt nạp tiền điện thoại tự động"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_chevron_right"
                    android:textColor="@color/gray"
                    android:textSize="18sp"
                    android:fontFamily="@font/fontawesome" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Không lo bỏ lỡ khuyến mãi từ nhà mạng, tài khoản luôn còn tiền"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/totalAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000 đ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/topUpButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nạp tiền"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/green_500" />
    </LinearLayout>
</LinearLayout> 